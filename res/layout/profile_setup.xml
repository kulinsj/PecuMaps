<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="Profile Setup"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/btn_cancelPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Canel" />
    </LinearLayout>

    <EditText
        android:id="@+id/inText_firstName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBar"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="125dp"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/inText_firstName"
        android:layout_alignBottom="@+id/inText_firstName"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="First Name" />

    <EditText
        android:id="@+id/inText_lastName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inText_firstName"
        android:layout_below="@+id/inText_firstName"
        android:layout_marginTop="14dp"
        android:ems="10">

    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/inText_lastName"
        android:layout_alignBottom="@+id/inText_lastName"
        android:layout_alignLeft="@+id/textView1"
        android:text="Last Name" />

    <EditText
        android:id="@+id/inText_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inText_lastName"
        android:layout_below="@+id/inText_lastName"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/inText_phone"
        android:layout_alignBottom="@+id/inText_phone"
        android:layout_alignLeft="@+id/textView2"
        android:text="Phone" />

    <EditText
        android:id="@+id/inText_screenName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/inText_firstName"
        android:layout_alignRight="@+id/inText_firstName"
        android:layout_below="@+id/topBar"
        android:layout_marginTop="32dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/inText_screenName"
        android:layout_alignBottom="@+id/inText_screenName"
        android:layout_alignLeft="@+id/textView1"
        android:text="Screen Name" />

    <CheckBox
        android:id="@+id/checkBox_TextOK"
        android:checked="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox_CallOK"
        android:layout_alignBottom="@+id/checkBox_CallOK"
        android:layout_alignRight="@+id/inText_phone"
        android:text="Texted" />

    <CheckBox
        android:id="@+id/checkBox_CallOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inText_phone"
        android:layout_marginRight="11dp"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/checkBox_TextOK"
        android:checked="true"
        android:text="Called" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/checkBox_CallOK"
        android:layout_alignBottom="@+id/checkBox_CallOK"
        android:layout_alignLeft="@+id/textView3"
        android:text="This number can be:" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/inText_screenName"
        android:text="Your screen name is the identity that will be visible to other users"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:id="@+id/btn_createProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:text="Create Profile" />

</RelativeLayout>